{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>InStockCount</th>
                <td>{{ product.inStockCount }}</td>
            </tr>
        </tbody>
    </table>


    <br>
    <hr>

    <table>
        <tr>
            <td><a class="btn btn-success" href="{{ path('product_edit', {'id': product.id}) }}">edit</a></td>
            <td>&emsp;</td>
            <td>{{ include('product/_delete_form.html.twig') }}</td>
            <td>&emsp;</td>
            <td><a class="btn btn-secondary"  href="{{ path('product_index') }}">back to list</a></td>
        </tr>
    </table>

    
{% endblock %}
