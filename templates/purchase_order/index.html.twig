{% extends 'base.html.twig' %}

{% block title %}PurchaseOrder index{% endblock %}

{% block body %}
    <h1>PurchaseOrder index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NumberOfUnits</th>
                <th>Email</th>
                <th>PhoneNumber</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>City</th>
                <th>Postcode</th>
                <th>StreetAddress</th>
                <th>StreetNumber</th>
                <th>Note</th>
                <th>CreatedDate</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for purchase_order in purchase_orders %}
            <tr>
                <td>{{ purchase_order.id }}</td>
                <td>{{ purchase_order.numberOfUnits }}</td>
                <td>{{ purchase_order.email }}</td>
                <td>{{ purchase_order.phoneNumber }}</td>
                <td>{{ purchase_order.firstName }}</td>
                <td>{{ purchase_order.lastName }}</td>
                <td>{{ purchase_order.city }}</td>
                <td>{{ purchase_order.postcode }}</td>
                <td>{{ purchase_order.streetAddress }}</td>
                <td>{{ purchase_order.streetNumber }}</td>
                <td>{{ purchase_order.note }}</td>
                <td>{{ purchase_order.createdDate ? purchase_order.createdDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ purchase_order.status }}</td>
                <td>
                    <a href="{{ path('purchase_order_show', {'id': purchase_order.id}) }}">show</a>
                    <a href="{{ path('purchase_order_edit', {'id': purchase_order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('purchase_order_new') }}">Create new</a>
{% endblock %}
